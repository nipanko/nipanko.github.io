---
import '@fontsource/press-start-2p';
import '../styles/global.css'
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en" class="theme-dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A graphics programmer's portfolio and blog." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<div class="background-container"></div>
		
		<div id="terminal-box" class="pixel-box w-full p-6 sm:p-8 lg:p-10">
            <Header />
            <main class="mt-8 mb-8 flex-grow">
			    <slot />
            </main>
            <Footer />
        </div>

		<script is:inline>
			document.addEventListener('DOMContentLoaded', () => {
				const html = document.documentElement;
				const themeButtons = {
					'theme-dark': document.querySelector('#theme-dark'),
					'theme-light': document.querySelector('#theme-light'),
					'theme-matrix': document.querySelector('#theme-matrix'),
				};
				Object.entries(themeButtons).forEach(([themeClass, button]) => {
					button?.addEventListener('click', () => { html.className = themeClass; });
				});
			});
		</script>
	</body>
</html>